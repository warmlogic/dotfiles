{
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.scrollBeyondLastLine": false,
    "editor.renderWhitespace": "boundary",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    "editor.quickSuggestionsDelay": 250,
    "editor.suggestSelection": "first",
    "window.zoomLevel": 0,
    "editor.codeActionsOnSave": null,
    "editor.accessibilitySupport": "off",
    "breadcrumbs.enabled": true,
    "workbench.colorTheme": "Dracula",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "workbench.startupEditor": "none",
    "search.showLineNumbers": true,
    "search.useIgnoreFiles": false,
    "extensions.ignoreRecommendations": false,

    // Don't report to MS
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // Terminal
    "terminal.integrated.inheritEnv": false,

    // -------- Python --------
    "python.showStartPage": false,
    "python.languageServer": "Pylance",
    "python.condaPath": "/Users/matt/miniconda/bin/conda",
    "python.venvPath": "/Users/matt/miniconda/envs",
    "python.analysis.logLevel": "Warning",
    "python.autoComplete.extraPaths": [
        "/Users/matt/github/branch/Branch_Python_ML",
        "/Users/matt/github/branch/Branch_Python_ML/lib/datascience",
        "/Users/matt/github/branch/Branch_Python_ML/feature_service",
        "/Users/matt/github/branch/Branch_Python_ML/credit_service",
        "/Users/matt/github/branch/branch_python_libraries",
        "/Users/matt/github/branch/branch_python_libraries/branch_ml",
    ],
    "python.analysis.extraPaths": [
        "/Users/matt/github/branch/Branch_Python_ML",
        "/Users/matt/github/branch/Branch_Python_ML/lib/datascience",
        "/Users/matt/github/branch/Branch_Python_ML/feature_service",
        "/Users/matt/github/branch/Branch_Python_ML/credit_service",
        "/Users/matt/github/branch/branch_python_libraries",
        "/Users/matt/github/branch/branch_python_libraries/branch_ml"
    ],
    // Linting
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "flake8",
    // Formatting
    "python.formatting.provider": "black",
    "autoDocstring.docstringFormat": "numpy",
    "autoDocstring.includeName": true,
    "jupyter.askForKernelRestart": false,

    // -------- Remote VSCode configuration --------
    // Port number to use for connection.
    "remote.port": 52698,
    // Launch the server on start up.
    "remote.onstartup": true,
    // Address to listen on.
    "remote.host": "127.0.0.1",
    // If set to true, error for remote.port already in use won't be shown anymore.
    "remote.dontShowPortAlreadyInUseError": true,

    // -------- Markdown --------
    // Linting
    "markdownlint.run": "onSave",
    "markdownlint.config": {
        "default": true,
        "MD004": false, // Unordered List Style
        "MD007": { "indent": 2 }, // Unordered List Indentation
        "MD013": false, // Line Length
    },
    // Formatting
    "markdown.extension.orderedList.marker": "one",

    // -------- Copy/paste behavior --------
    // Make VS Code behave like a respectable macOS app (almost... it's not a separate kill ring).
    // Must also install the macros extension and properly set up ~/Library/Application\ Support/Code/Users/keybindings.json
    "macros": {
        "cutToTheEnd": [
            "cursorEndSelect",
            "editor.action.clipboardCutAction"
        ],
        "yank": [
            "editor.action.clipboardPasteAction"
        ]
    },

    // -------- Source Control --------
    "gitlens.codeLens.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.enabled": false,
    "gitlens.hovers.currentLine.over": "line",

    // -------- Ruby --------
    "solargraph.checkGemVersion": false,

    // -------- Terraform --------
    "terraform.languageServer": {
        "external": true,
        "args": [
            "serve"
        ]
    },

    // -------- Spelling --------
    "spellright.documentTypes": [
        "markdown",
        "latex",
    ],
    "spellright.ignoreFiles": [
        "**/*.csv",
        "**/*.json*",
        "**/.gitignore",
        "**/.spellignore"
    ],

    // -------- Other --------
    "todo-tree.highlights.enabled": true,
    "todo-tree.tree.showScanModeButton": false,
    "launch": {
        "configurations": [],
        "compounds": []
    },
}
